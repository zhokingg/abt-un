# Core Configuration
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID=1
PRIVATE_KEY=
DRY_RUN=true
NODE_ENV=development

# Cache Configuration  
REDIS_URL=redis://localhost:6379

# API Keys
COINGECKO_API_KEY=your_coingecko_api_key

# Trading Configuration
MIN_PROFIT_THRESHOLD=0.5
MAX_TRADE_AMOUNT=1000
SLIPPAGE_TOLERANCE=0.1

# Monitoring Configuration
PRICE_CHECK_INTERVAL=5000
LOG_LEVEL=info

# Phase 4: Network Optimization
RPC_URL_PRIMARY=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
RPC_URL_SECONDARY=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
RPC_URL_TERTIARY=https://mainnet.infura.io/v3/YOUR_BACKUP_KEY

# Phase 4: Performance Targets
RPC_LATENCY_TARGET=100
EXECUTION_TIME_TARGET=30000
MEMORY_USAGE_TARGET=512
CPU_USAGE_TARGET=70
SUCCESS_RATE_TARGET=95

# Phase 4: Risk Management
MAX_DAILY_LOSS=1000
MAX_POSITION_SIZE=0.1
MAX_DRAWDOWN=0.2
EMERGENCY_STOP_LOSS=0.05
MAX_CONSECUTIVE_LOSSES=5
COOLDOWN_PERIOD=300000

# Phase 4: Monitoring
ENABLE_FILE_LOGGING=true
ENABLE_METRICS=true
METRICS_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000
LOG_RETENTION_DAYS=30

# Phase 4: Alerting - Discord
ENABLE_DISCORD_ALERTS=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Phase 4: Alerting - Telegram
ENABLE_TELEGRAM_ALERTS=false
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Phase 4: Alerting - Email
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@arbitragebot.com
EMAIL_TO=alerts@yourcompany.com

# Phase 4: Alerting - SMS (Twilio)
ENABLE_SMS_ALERTS=false
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM=+1234567890
SMS_TO=+1234567890

# Phase 4: Alerting - Slack
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Phase 4: Alert Configuration
ALERT_PRIORITY_THRESHOLD=medium
ALERT_RATE_LIMIT_WINDOW=300000
MAX_ALERTS_PER_WINDOW=10
ALERT_COOLDOWN_PERIOD=60000

# Phase 4: Backtesting
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_SIMULATION_SPEED=1
BACKTEST_DATA_RETENTION=6
MONTE_CARLO_RUNS=1000

# Phase 4: External Services
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Phase 4: Prometheus (Optional)
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Phase 4: Grafana (Optional)
ENABLE_GRAFANA=false
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Phase 4: Bull Queue (Optional)
ENABLE_BULL_QUEUE=false
BULL_QUEUE_CONCURRENCY=5
BULL_QUEUE_MAX_RETRIES=3